<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="customText" type="java.lang.String"/>
        <!--
        <variable name="image" type="android.widget.ImageView"/>

        android:src="@{image}" -->
    </data>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <EditText
                android:id="@+id/my_kind_of_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@{customText}"
                android:text="@{customText}"
                android:layout_alignParentTop="true"/>

        <ImageButton
                android:id="@+id/my_test_kind_of_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delete_24"
                android:text="@string/button"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentTop="true" tools:ignore="RtlHardcoded"/>

    </RelativeLayout>
</layout>